# 微店 (Weidian) API配置
# 从微店开放平台获取: https://open.weidian.com/

# 必需：应用密钥
WEIDIAN_APP_KEY=your_app_key_here
WEIDIAN_APP_SECRET=your_app_secret_here

# 必需：店铺ID
WEIDIAN_SHOP_ID=your_shop_id_here

# 可选：如果有固定的Access Token可以配置（否则会自动获取）
# WEIDIAN_ACCESS_TOKEN=your_access_token_here

# 商品ID配置（需要先在微店创建这两个商品）
# 注意：每个商品可以有多种颜色作为不同的SKU
WEIDIAN_ITEM_ID_HOODIE=1234567890    # 卫衣商品ID (¥99)
WEIDIAN_ITEM_ID_TSHIRT=1234567891    # 短袖T恤商品ID (¥49)

# SKU ID配置（对应不同尺码）
# 卫衣的SKU
WEIDIAN_HOODIE_SKU_S=hoodie_s_id      # 卫衣S码SKU ID
WEIDIAN_HOODIE_SKU_M=hoodie_m_id      # 卫衣M码SKU ID
WEIDIAN_HOODIE_SKU_L=hoodie_l_id      # 卫衣L码SKU ID
WEIDIAN_HOODIE_SKU_XL=hoodie_xl_id    # 卫衣XL码SKU ID

# T恤的SKU
WEIDIAN_TSHIRT_SKU_S=tshirt_s_id      # T恤S码SKU ID
WEIDIAN_TSHIRT_SKU_M=tshirt_m_id      # T恤M码SKU ID
WEIDIAN_TSHIRT_SKU_L=tshirt_l_id      # T恤L码SKU ID
WEIDIAN_TSHIRT_SKU_XL=tshirt_xl_id    # T恤XL码SKU ID